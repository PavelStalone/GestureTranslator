                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Glebix"
                        android:textColor="?attr/textColor"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ML engineer, Android and Web developer"
                        android:textColor="?attr/descriptionColor"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:src="@drawable/hand_logo_ortin"/>
                        <Button
                            android:id="@+id/glebix_github_button"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/url_button"
                            android:text="Github"
                            android:textColor="?attr/accentColor"
                            android:clickable="true"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:onClick="goToGlebixGithub"/>
                        <Button
                            android:id="@+id/glebix_contacts_button"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/url_button"
                            android:text="Контакты"
                            android:textColor="?attr/accentColor"
                            android:clickable="true"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:onClick="goToGlebixContacts"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout

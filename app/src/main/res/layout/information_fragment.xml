                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/url_button"
                            android:text="Github"
                            android:textColor="?attr/accentColor"
                            android:clickable="true"

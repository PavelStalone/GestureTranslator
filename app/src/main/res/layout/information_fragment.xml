<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".presentation.InformationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center_horizontal"
                android:text="О приложении"
                android:textColor="?attr/textColor"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/hand_logo_ortin" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Gesture Translator - настолько класная прилажуха что даже сложно придумать соизмеримо класное описание, так что я над ним еще подумаю, но вы не уходите пока что"
                    android:textColor="?attr/descriptionColor"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/web_app_button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/url_button"
                    android:text="Сайт приложения"
                    android:textColor="?attr/accentColor"
                    android:clickable="true"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:onClick="goToWebApplication"
                    />
                <Button
                    android:id="@+id/app_github_button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/url_button"
                    android:text="Github приложения"
                    android:textColor="?attr/accentColor"
                    android:clickable="true"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:onClick="goToAppGithub"
                    />
                <Button
                    android:id="@+id/donate_button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/url_button"
                    android:text="Пожертвования"
                    android:textColor="?attr/accentColor"
                    android:clickable="true"/>
        <!--            Не знаю нужна ли тут ссылка-->
        <!--            android:autoLink="web"-->
        <!--            android:linksClickable="true"-->
        <!--            android:onClick="goToAppGithub"-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Разработчики"
                    android:textColor="?attr/textColor"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="PavelStalone"
                        android:textColor="?attr/textColor"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Team lead, Android developer and ML engineer"
                        android:textColor="?attr/descriptionColor"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:src="@drawable/hand_logo_ortin"/>
                        <Button
                            android:id="@+id/pavel_stalone_github_button"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/url_button"
                            android:text="Github"
                            android:textColor="?attr/accentColor"
                            android:clickable="true"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:onClick="goToPavelStaloneGithub"/>
                        <Button
                            android:id="@+id/pavel_stalone_contacts_button"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/url_button"
                            android:text="Контакты"
                            android:textColor="?attr/accentColor"
                            android:clickable="true"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:onClick="goToPavelStaloneContacts"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"

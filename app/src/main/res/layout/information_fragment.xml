                            android:layout_marginStart="20dp"
                            android:background="@drawable/url_button"
                            android:text="Контакты"
                            android:textColor="?attr/accentColor"
                            android:clickable="true"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:onClick="goToGlazeezalgContacts"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Sever"
                        android:textColor="?attr/textColor"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teach lead and mentor"
                        android:textColor="?attr/descriptionColor"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:src="@drawable/hand_logo_ortin"/>
                        <Button
                            android:id="@+id/sever_github_button"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/url_button"
                            android:text="Github"
                            android:textColor="?attr/accentColor"
                            android:clickable="true"

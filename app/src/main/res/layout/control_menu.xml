<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:gravity="center"
    android:paddingVertical="25dp">

    <ImageView
        android:id="@+id/gestureList"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/gesture_list"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/flashLight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/flashLight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/flashlight"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/realTimeBTN"
        app:layout_constraintStart_toEndOf="@id/gestureList"
        app:layout_constraintTop_toTopOf="parent" />


    <com.ortin.gesturetranslator.components.RealTimeButton
        android:id="@+id/realTimeBTN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gallery"
        app:layout_constraintStart_toEndOf="@id/flashLight"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/stop_start"
        app:lottie_speed="2" />

    <!--    <ImageView-->
    <!--        android:id="@+id/realTimeIV"-->
    <!--        android:layout_width="60dp"-->
    <!--        android:layout_height="60dp"-->
    <!--        android:background="@drawable/real_time_button" />-->

    <ImageView
        android:id="@+id/gallery"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/gallery"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/realTimeBTN"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
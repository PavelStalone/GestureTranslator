<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.V25.Theme.GestureTranslator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_text</item>
        <item name="colorSecondaryVariant">@color/secondary_text</item>
        <item name="colorOnSecondary">@color/divider_color</item>

        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/purple</item>

        <item name="backgroundColor">@color/background</item>

        <item name="primaryTextSize">20sp</item>
        <item name="secondaryTextSize">20sp</item>

        <item name="mainDarkColor">@color/primary_color_dark_night</item>
        <item name="mainColor">@color/primary_color_night</item>
        <item name="secondaryColor">@color/secondary_color_night</item>
        <item name="accentColor">@color/accent_color_night</item>
        <item name="mainTextColor">@color/main_text_color_night</item>
        <item name="secondTextColor">@color/second_text_color_night</item>
    </style>

    <style name="Base.Theme.GestureTranslator" parent="Base.V25.Theme.GestureTranslator"/>

    <style name="Theme.GestureTranslator" parent="Base.Theme.GestureTranslator">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>